<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <CheckBox
        android:id="@+id/cbCeltofar"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="207dp"
        android:text="Celcius to Fahrenheit" />

    <CheckBox
        android:id="@+id/cbNautokm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="165dp"
        android:text="Nautical mile to km" />

    <CheckBox
        android:id="@+id/cbPoutogra"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="169dp"
        android:text="Pound to Kg" />

    <CheckBox
        android:id="@+id/cbLittogal"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="213dp"
        android:text="Litre to Gallon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignBaseline="@+id/tbval"
        android:layout_alignStart="@+id/tvres"
        android:text="Enter a value :"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:text="Enter a value : " />

    <EditText
        android:id="@+id/tbval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tvres"
        android:layout_width="368dp"
        android:layout_height="144dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#7CB342"/>

    <Button
        android:id="@+id/btnCon"
        android:layout_width="98dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/tbval"
        android:layout_alignTop="@+id/cbPoutogra"
        android:background="#7CB342"
        android:textColor="@android:color/white"
        android:text="Convert" />

    <CheckBox
        android:id="@+id/cbInctocm"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="85dp"
        android:text="Inch to cm" />

    <CheckBox
        android:id="@+id/cbIntofoo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="124dp"
        android:text="Inch to Foot" />

</RelativeLayout>